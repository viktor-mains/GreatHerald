{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist",
		"target": "es6",
		"module": "commonJS",
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": true,
		"pretty": true,
		"paths": {
			"config.json": ["config.example.json"] // This mapping is relative to "baseUrl"
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist"]
}
