{
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": true,
		"target": "es6",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"module": "commonJS",
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist"]
}
